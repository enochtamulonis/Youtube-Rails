<%= link_to post do %>
  <div id="<%= dom_id post %>">
    <%= image_tag post.video.preview(resize_to_limit: [500, 500]).processed.url %>

    <p class="my-2 font-bold text-2xl">
       <%= post.title %>
    </p>

    <p class="my-2">
      posted by <%= post.user.email %>
    </p>

    <p class="my-2">
      views <%= post.views_count %>
    </p>

    <p class="my-2">
      likes <%= post.likes.count %>
    </p>
  </div>
<% end %>